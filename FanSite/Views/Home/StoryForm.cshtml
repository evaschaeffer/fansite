@model FanSite.Models.Stories
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StoryForm</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>STORIES</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="StoryForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Title">Title:</label>
                    <input class="form-control" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label asp-for="Date">Date:</label>
                    <input class="form-control" asp-for="Date" />
                </div>
                <div class="form-group">
                    <label asp-for="Text">Text:</label>
                    <input class="form-control" asp-for="Text" />
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit Story
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
