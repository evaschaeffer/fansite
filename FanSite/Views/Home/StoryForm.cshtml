@model FanSite.Models.Stories
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StoryForm</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Home</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="/Home/History">History</a></li>
                    <li><a href="/Sources/Index">Sources</a></li>
                </ul>
            </div>
        </nav>
        <div class="panel panel-success">
            <div class="text-center"><h2>Stories</h2></div>
            <div class="panel-body">
                <form class="p-a-1" asp-action="StoryForm" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Title">Title:</label>
                        <input class="form-control" asp-for="Title" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Date">Date:</label>
                        <input class="form-control" asp-for="Date" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Text">Text:</label>
                        <input class="form-control" asp-for="Text" />
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">
                            Submit Story
                        </button>
                    </div>
                </form>
            </div>
        </div>
        </div>

</body>
</html>
